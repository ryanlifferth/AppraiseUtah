@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="HomeContent" class="row table-row">

    <div class="col-md-9 content">
        <div class="content-well">
            @*@{ Html.RenderAction("_Appraisers", "Home"); }*@

            <h2 class="first-item">When you really need to know, experience matters</h2>
            <p>
                Welcome to Lifferth-Lawson Appraisals.  With over 40 years of appraisal experience and a deep commitment
                to integrity, we are confident we can meet your appraisal needs.  We specialize in mortgage, divorce, listing,
                lot, employee relocation, estate and tax appraisals.  When you really need to know, experience matters.
            </p>

            <h2>Our Experience</h2>
            <ul>
                <li>Over 40 years of experience</li>
                <li>MAI, SRA designations</li>
                <li>FHA approved</li>
                <li>VA approved</li>
                <li>Expert witness</li>
                <li>Se habla Expañol</li>
            </ul>

            <h2>Appraisal Orders</h2>
            <p>
                Need an appraisal?  Lifferth-Lawson Appraisal accepts orders through our @Html.ActionLink("online ordering tool", "Index", "Appraisal"), via
                email at <a href="mailto: lifferth@appraiseutah.com">lifferth@appraiseutah.com</a>, or via telephone at
                <a href="tel:+1-801-547-9700">801.547.9700</a>.  We provide both residential as well as commercial appraisal services.  Our turn around time is quick while
                still providing high quality appraisal reports.
            </p>

        </div>
    </div>
    <div class="col-md-3 sidebar">
        <div id="RatePanelTitle" class="panel panel-title">Interest Rates</div>
        <div id="RatePanel" class="panel">
            <div id="Thirty" class="rate-container">
                <span class="rate"></span>
                <span class="rate-title"></span>
            </div>
            <div id="Fifteen" class="rate-container">
                <span class="rate"></span>
                <span class="rate-title"></span>
            </div>
            <div id="FiveOne" class="rate-container">
                <span class="rate"></span>
                <span class="rate-title"></span>
            </div>
            <a href="http://www.zillow.com" class="powered-by-zillow" target="_blank">Provided by Zillow.com</a>

            <div id="Loader">
                <span class="fa fa-spinner fa-pulse"></span>
                <p>Loading current rates from Zillow.com</p>
            </div>
        </div>

        <div id="DataMasterPanelTitle" class="panel panel-title">DataMaster</div>
        <div id="DataMasterPanel" class="panel">
            <a href="http://www.datamasterusa.com" target="_blank" class="ad-well">
                <div class="datamaster-header">Download a FREE</div>
                <div class="datamaster-14-day">14 Day Trial</div>
                <div class="ad-image"></div>
            </a>
            <p>
                DataMaster has over a decade of experience providing real estate appraisers with time and money saving tools.  Our real estate appraisal software will help you complete all your appraisal forms quickly, easily and accurately.
            </p>
            <a href="http://www.DataMasterUsa.com" target="_blank" class="btn btn-default btn-green">Learn More ></a>
        </div>

        <div id="MiscPanel" class="panel fill-cell"></div>


    </div>

</div>


@section htmlhead {
    @Styles.Render("~/css/home")
}
@section PageScripts {
    @Scripts.Render("~/js/rates")
}



