<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@*AppraiseUtah.com*@ @(!String.IsNullOrEmpty(ViewBag.Title) ? " - " + ViewBag.Title : String.Empty)</title>
    @Styles.Render("~/css/main")
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Lato:100,300,400|Open+Sans:300,400">
    @RenderSection("htmlhead", required: false)

    @*@Scripts.Render("~/js/modernizr")*@

</head>
<body>
    <div id="pageContainer">
        @{Html.RenderPartial("_Navigation");}

        <div id="body" class="container">
            @RenderBody()
        </div>

    </div>
    <footer id="footer">
        <div class="footer-banner">
            <div class="container footer-text">
                We would love to hear from you
                <a class="btn btn-default btn-green" href="#">Feedback</a>
            </div>
        </div>

        <div class="container" id="footerContent">
            <p>&copy; @DateTime.Now.Year AppraiseUtah.com</p>
        </div>
    </footer>

    @Scripts.Render("~/js/jquery")
    @Scripts.Render("~/js/lib")

    @Scripts.Render("~/js/main")

    @RenderSection("PageScripts", false)
</body>
</html>
