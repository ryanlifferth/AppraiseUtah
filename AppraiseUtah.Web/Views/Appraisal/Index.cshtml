@using AppraiseUtah.ViewModels;
@model AppraisalViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Appraisal", FormMethod.Post, new { id = "OrderAppraisal" }))
{
    Html.AntiForgeryToken();

    <h4>1.  Select an appraiser/appraisal company</h4>
    <div class="well well-sm form-group">
        <div class="group-label">
            @Html.LabelFor(m => m.Appraisal.AppraiserId)
        </div>
        <div class="group-input">
            @{ Html.RenderAction("_AppraiserDropdown", "Appraiser"); }
            @Html.HiddenFor(m => m.Appraisal.AppraiserId, new { data_item = "AppraiserId", @class = "validate" })
            @Html.ValidationMessageFor(m => m.Appraisal.AppraiserId)
        </div>
    </div>

    <h4>2.  Tell us about yourself</h4>
    <div class="well well-sm">
        <div class="form-group">
            @Html.LabelFor(m => m.Appraisal.ClientPerson.CompanyName, new { @class = "" })
            @Html.TextBoxFor(m => m.Appraisal.ClientPerson.CompanyName, new { @class = "" })
        </div>
        <div class="form-group">
            @Html.Label("Name")
            @Html.TextBoxFor(m => m.Appraisal.ClientPerson.FirstName, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientPerson.FirstName) })
            @Html.TextBoxFor(m => m.Appraisal.ClientPerson.LastName, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientPerson.LastName) })
            @Html.ValidationMessageFor(m => m.Appraisal.ClientPerson.FirstName)
            @Html.ValidationMessageFor(m => m.Appraisal.ClientPerson.LastName)
        </div>
        <div class="form-group">
            @Html.Label("Contact Info")
            @Html.TextBoxFor(m => m.Appraisal.ClientPerson.Phone, new { @class = "phone-number", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientPerson.Phone) })
            @Html.TextBoxFor(m => m.Appraisal.ClientPerson.Email, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientPerson.Email) })
            @Html.ValidationMessageFor(m => m.Appraisal.ClientPerson.Phone)
            @Html.ValidationMessageFor(m => m.Appraisal.ClientPerson.Email)
        </div>
        <div class="form-group">
            <div class="group-label">
                @Html.Label("Address")
            </div>
            <div class="group-input">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.ClientAddress.Address1, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientAddress.Address1) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.ClientAddress.Address2, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientAddress.Address2) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.ClientAddress.City, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientAddress.City) })
                    @Html.TextBoxFor(m => m.Appraisal.ClientAddress.StateCode, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientAddress.StateCode) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.ClientAddress.PostalCode, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ClientAddress.PostalCode) })
                </div>
            </div>
        </div>
    </div>

    <h4>3.  Tell us about the property</h4>
    <div class="well well-sm">
        <div class="form-group">
            <div class="group-label">
                @Html.Label("Occupant Info")
            </div>
            <div class="group-input">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.OccupantPerson.FirstName, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.OccupantPerson.FirstName) })
                    @Html.TextBoxFor(m => m.Appraisal.OccupantPerson.LastName, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.OccupantPerson.LastName) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.OccupantPerson.Phone, new { @class = "phone-number", placeholder = Html.DisplayNameFor(m => m.Appraisal.OccupantPerson.Phone) })
                    @Html.TextBoxFor(m => m.Appraisal.OccupantPerson.Email, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.OccupantPerson.Email) })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Appraisal.PropertyTypeCode)
            @Html.TextBoxFor(m => m.Appraisal.PropertyTypeCode, new { @class = "" })
        </div>
        <div class="form-group">
            <div class="group-label">
                @Html.Label("Property Address")
            </div>
            <div class="group-input">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.PropertyAddress.Address1, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.PropertyAddress.Address1) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.PropertyAddress.Address2, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.PropertyAddress.Address2) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.PropertyAddress.City, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.PropertyAddress.City) })
                    @Html.HiddenFor(m => m.Appraisal.PropertyAddress.StateCode, new { value = "UT" } )
                    <span class="default-input-value">Utah</span>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.PropertyAddress.PostalCode, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.PropertyAddress.PostalCode) })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Appraisal.ContactForAccess, new { @class = "", placeholder = Html.DisplayNameFor(m => m.Appraisal.ContactForAccess) })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Appraisal.AppraisalTypeCode)
            @Html.TextBoxFor(m => m.Appraisal.AppraisalTypeCode, new { @class = "" })
            @Html.ValidationMessageFor(m => m.Appraisal.AppraisalTypeCode)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Appraisal.SalesContractPrice)
            <div class="input-group">
                <span class="input-group-addon">$</span>
                @Html.TextBoxFor(m => m.Appraisal.SalesContractPrice, new { @class = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Appraisal.LegalDescription)
            @Html.TextAreaFor(m => m.Appraisal.LegalDescription, new { rows = "2" })
        </div>
    </div>

    <h4>4.  What else do we need to know?</h4>
    <div class="well well-sm bottom-well">
        @Html.LabelFor(m => m.Appraisal.Comments)
        @Html.TextAreaFor(m => m.Appraisal.Comments, new { rows = "3" })
    </div>

    <div class="form-group pull-right submit-buttons">
        <input type="submit" value="Order Appraisal" class="btn btn-primary btn-lg" />
        <input type="reset" value="Cancel" class="btn btn-default btn-lg" />
    </div>

}


@section htmlhead {

    <link href="@Url.Content("~/Content/css/OrderAppraisal.css")" rel="stylesheet" type="text/css" />

}

@section PageScripts {

    <script src="@Url.Content("~/Scripts/Lib/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Lib/jquery.maskedinput.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/Common/Appraisers.js")"></script>
    <script src="@Url.Content("~/Scripts/Common/OrderAppraisal.js")"></script>

}
